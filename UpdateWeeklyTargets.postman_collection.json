				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"acting_ir_id\": \"IR001\",\n    \"team_id\": 1,\n    \"team_weekly_info_target\": 15,\n    \"team_weekly_plan_target\": 20\n}"
				},
				"url": {
					"raw": "http://localhost:8000/api/update_weekly_targets/",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8000",
					"path": [
						"api",
						"update_weekly_targets",
						""
					]
				},
