{
	"info": {
		"name": "Update Weekly Targets",
		"description": "API endpoints to update weekly targets for IR or Team",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Update IR Weekly Targets - Reset to 0",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"acting_ir_id\": \"IR001\",\n    \"ir_id\": \"IR123\",\n    \"weekly_info_target\": 0,\n    \"weekly_plan_target\": 0,\n    \"weekly_uv_target\": 0\n}"
				},
				"url": {
					"raw": "http://localhost:8000/api/update_weekly_targets/",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8000",
					"path": [
						"api",
						"update_weekly_targets",
						""
					]
				},
				"description": "Reset all weekly targets to 0 for a specific IR. Note: weekly_uv_target only works for CTC (access level 2) and LDC (access level 3)."
			},
			"response": []
		},
		{
			"name": "Update Team Weekly Targets - Reset to 0",
